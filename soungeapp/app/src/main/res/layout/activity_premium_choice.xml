<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_premium"
    tools:context=".actitivy.PremiumChoiceActivity">

    <TextView
        android:id="@+id/textOffersPremium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/seja_premium"
        android:textColor="@color/main_purple"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/textOffersPremium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_pager"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonPremiumPlanos"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/main_purple"
            android:text="@string/selecione_premium"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/dots"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" />


</RelativeLayout>