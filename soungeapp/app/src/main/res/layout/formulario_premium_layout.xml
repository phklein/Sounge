<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/closeButtonFormPremium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="@+id/imageFormularioPremium"
        app:layout_constraintTop_toTopOf="@+id/imageFormularioPremium" />
    <ImageView
        android:id="@+id/imageFormularioPremium"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@drawable/playlist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/mensagemConfirmFormPremium"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/formulario_premium_confirmacao"
        android:textColor="@color/main_purple"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/imageFormularioPremium"/>

    <Button
        android:id="@+id/confirmarButtonFormPremium"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="@string/confirmar_premium"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:backgroundTint="@color/main_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mensagemConfirmFormPremium"
        app:layout_constraintVertical_bias="1" />
</androidx.constraintlayout.widget.ConstraintLayout>