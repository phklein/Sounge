<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    android:padding="24dp"
    tools:context=".fragment.ProfileTalentsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cl_profile_band"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/dark_gray"
        android:visibility="gone"
        android:paddingBottom="24dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_band_picture"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@string/profile_picture_description"
            android:src="@drawable/example_profile_picture"
            app:civ_border_color="@color/dark_gray"
            app:civ_border_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_profile_band_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="2.5dp"
            android:text="System of a Down"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/iv_profile_band_picture"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_profile_band_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif"
            android:maxWidth="280dp"
            android:padding="2.5dp"
            android:text="Banda de Metal"
            android:textAlignment="textStart"
            android:textColor="@color/dark_white"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/iv_profile_band_picture"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_band_name" />

        <TextView
            android:id="@+id/tv_profile_band_birth_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif"
            android:maxWidth="280dp"
            android:padding="2.5dp"
            android:text="2003"
            android:textAlignment="textStart"
            android:textColor="@color/dark_white"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/iv_profile_band_picture"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_band_genre" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_profile_no_band"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2.5dp"
            android:text="@string/not_in_band"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />
        
    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>