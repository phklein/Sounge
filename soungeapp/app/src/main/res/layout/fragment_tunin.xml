<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TuninFragment">

    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        android:id="@+id/frame"
        android:background="@color/background_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rotation_degrees="15.5"
        tools:context=".MyActivity2" />

    <TextView
        android:id="@+id/tvWarningCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/shadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llMatchButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivRecuseBtn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="0"
                android:background="@drawable/bg_purple_btn_match"
                android:src="@drawable/ic_cancel"
                android:padding="25dp"
                android:layout_marginEnd="40dp" />

            <ImageView
                android:id="@+id/ivOnBackBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="0"
                android:background="@drawable/bg_white_btn_match"
                android:src="@drawable/ic_return"
                android:padding="25dp" />

            <ImageView
                android:id="@+id/ivMatchBtn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="0"
                android:background="@drawable/bg_light_purple_btn_match"
                android:layout_marginStart="40dp"
                android:src="@drawable/ic_match_like"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="15dp"
                android:paddingEnd="20dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>